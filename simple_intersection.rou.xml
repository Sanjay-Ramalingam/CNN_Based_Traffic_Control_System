<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

    <!-- Vehicle types -->
    <vType id="car" accel="2.6" decel="4.5" sigma="0.5" length="5" maxSpeed="13.9" guiShape="passenger"/>

    <!-- Flows for morning (high N/S, medium E/W) -->
    <flow id="morning_north" type="car" begin="0" end="3600" from="north_in" to="south_out" probability="0.4"/>
    <flow id="morning_south" type="car" begin="0" end="3600" from="south_in" to="north_out" probability="0.4"/>
    <flow id="morning_east"  type="car" begin="0" end="3600" from="east_in"  to="west_out" probability="0.2"/>
    <flow id="morning_west"  type="car" begin="0" end="3600" from="west_in"  to="east_out" probability="0.2"/>

    <!-- Flows for noon (medium N/S/E/W) -->
    <flow id="noon_north" type="car" begin="3600" end="7200" from="north_in" to="south_out" probability="0.25"/>
    <flow id="noon_south" type="car" begin="3600" end="7200" from="south_in" to="north_out" probability="0.25"/>
    <flow id="noon_east"  type="car" begin="3600" end="7200" from="east_in"  to="west_out" probability="0.25"/>
    <flow id="noon_west"  type="car" begin="3600" end="7200" from="west_in"  to="east_out" probability="0.25"/>

    <!-- Flows for evening (medium N/S, high E/W) -->
    <flow id="evening_north" type="car" begin="7200" end="10800" from="north_in" to="south_out" probability="0.2"/>
    <flow id="evening_south" type="car" begin="7200" end="10800" from="south_in" to="north_out" probability="0.2"/>
    <flow id="evening_east"  type="car" begin="7200" end="10800" from="east_in"  to="west_out" probability="0.4"/>
    <flow id="evening_west"  type="car" begin="7200" end="10800" from="west_in"  to="east_out" probability="0.4"/>

</routes>
